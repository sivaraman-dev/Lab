TicketReservation.aspx.cs
using System;

namespace YourNamespace
{
    public partial class TicketReservation : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {
            lblMessage.Text = "";
        }

        protected void btnReserve_Click(object sender, EventArgs e)
        {
            string name = txtName.Text.Trim();
            string destination = ddlDestination.SelectedValue;
            string ticketsText = txtTickets.Text.Trim();

            int tickets;
            if (string.IsNullOrEmpty(name))
            {
                lblMessage.ForeColor = System.Drawing.Color.Red;
                lblMessage.Text = "Please enter your name.";
                return;
            }

            if (string.IsNullOrEmpty(destination))
            {
                lblMessage.ForeColor = System.Drawing.Color.Red;
                lblMessage.Text = "Please select a destination.";
                return;
            }

            if (!int.TryParse(ticketsText, out tickets) || tickets <= 0)
            {
                lblMessage.ForeColor = System.Drawing.Color.Red;
                lblMessage.Text = "Please enter a valid number of tickets.";
                return;
            }


            lblMessage.ForeColor = System.Drawing.Color.Green;
            lblMessage.Text = string.Format("Thank you, {0}. Your reservation for {1} ticket(s) to {2} is confirmed!", name, tickets, destination);
        }
    }
}
