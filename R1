cat("Temperature Conversion Program\n")
cat("1: Fahrenheit to Celsius\n")
cat("2: Celsius to Fahrenheit\n")

choice <- as.integer(readline(prompt = "Enter your choice (1 or 2): "))

if (choice == 1) {
  # Fahrenheit to Celsius
  f <- as.numeric(readline(prompt = "Enter temperature in Fahrenheit: "))
  c <- (f - 32) * 5/9
  cat(f, "Fahrenheit is", round(c, 2), "Celsius\n")
  
} else if (choice == 2) {
  # Celsius to Fahrenheit
  c <- as.numeric(readline(prompt = "Enter temperature in Celsius: "))
  f <- (c * 9/5) + 32
  cat(c, "Celsius is", round(f, 2), "Fahrenheit\n")
  
} else {
  cat("Invalid choice. Please run the program again and enter 1 or 2.\n")
}
