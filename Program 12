Default.aspx.cs
using System;
using System.Web.UI;
using System.Xml;
using System.Web;


namespace XmlExample
{
    public partial class Default : Page
    {
        string xmlFilePath = HttpContext.Current.Server.MapPath("~/StudentData.xml");

        protected void btnWrite_Click(object sender, EventArgs e)
        {
            XmlTextWriter writer = new XmlTextWriter(xmlFilePath, System.Text.Encoding.UTF8);
            writer.Formatting = Formatting.Indented;

            writer.WriteStartDocument();
            writer.WriteStartElement("Student");

            writer.WriteElementString("StudentID", txtID.Text);
            writer.WriteElementString("Name", txtName.Text);
            writer.WriteElementString("Age", txtAge.Text);
            writer.WriteElementString("Department", txtDept.Text);

            writer.WriteEndElement();
            writer.WriteEndDocument();
            writer.Close();

            litOutput.Text = "<b>XML written successfully!</b>";
        }

        protected void btnRead_Click(object sender, EventArgs e)
        {
            XmlDocument doc = new XmlDocument();
            doc.Load(xmlFilePath);

            string output = "<h3>Student Information:</h3>";
            output += "<ul>";
            foreach (XmlNode node in doc.DocumentElement.ChildNodes)
            {
                output += "<li><b>" + node.Name + ":</b> " + node.InnerText + "</li>";
            }
            output += "</ul>";

            litOutput.Text = output;
        }
    }
}


StudentData.xml

<?xml version="1.0" encoding="utf-8"?>
<Student>
  <StudentID> </StudentID>
  <Name> </Name>
  <Age> </Age>
  <Department> </Department>
</Student>
