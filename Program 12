        <asp:TextBox ID="txtAge" runat="server" /><br /><br />
        
        <asp:Label ID="Label4" runat="server" Text="Department:" />
        <asp:TextBox ID="txtDept" runat="server" /><br /><br />
        
        <asp:Button ID="btnWrite" runat="server" Text="Write to XML" OnClick="btnWrite_Click" />
        <asp:Button ID="btnRead" runat="server" Text="Read XML" OnClick="btnRead_Click" /><br /><br />

        <asp:Literal ID="litOutput" runat="server" />
    </form>
</body>
